<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="modelUserInfoDivider"
            type="com.teamnoyes.githubtest.domain.model.ModelSealedUserDetail.ModelUserDataDivider" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="-4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userInfoDividerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:text="@{modelUserInfoDivider.title}"
            tools:text="@string/divide_user_info" />
    </LinearLayout>
</layout>
